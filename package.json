{
  "name": "digital-marketplace-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "A digital marketplace platform built with Next.js, Bun/Elysia.js, and PostgreSQL",
  "keywords": [
    "nextjs",
    "bun",
    "elysia",
    "postgresql",
    "prisma",
    "monorepo",
    "marketplace"
  ],
  "author": "Digital Marketplace Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "scripts": {
    "build": "turbo build --filter=!//",
    "dev": "turbo dev --filter=!//",
    "lint": "turbo lint --filter=!//",
    "format": "prettier --write .",
    "clean": "turbo clean --filter=!//",
    "test": "turbo test --filter=!//",
    "db:generate": "pnpm --filter backend prisma generate",
    "db:migrate:dev": "pnpm --filter backend prisma migrate dev",
    "db:migrate:deploy": "pnpm --filter backend prisma migrate deploy",
    "db:seed": "pnpm --filter backend prisma seed",
    "db:studio": "pnpm --filter backend prisma studio"
  },
  "devDependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/postcss": "^4.1.17",
    "@turbo/gen": "^1.12.4",
    "@types/react": "18.3.1",
    "@types/react-dom": "18.3.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "prisma": "5.10.2",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.0",
    "turbo": "^2.6.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@prisma/adapter-pg": "5.10.2",
    "@prisma/client": "5.10.2",
    "@radix-ui/react-accordion": "^1.2.12",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
